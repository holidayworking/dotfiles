  pkgs,
  system,
  username,
  ...
}:
let
  git-now = pkgs.callPackage ../../packages/git-now.nix { };
in
{
  home-manager.users."${username}".home.packages = with pkgs; [
    awscli2
    direnv
    ffmpeg
    fish
    gemini-cli
    ghq
    git
    git-now
    gnumake
    google-cloud-sdk
    jq
    nixfmt-rfc-style
    peco
    proto
    shfmt
    tig
    tmux
    vim
    yt-dlp
  ];
}
